# Server Configuration
PORT=8080
NODE_ENV=development

# Firebase Configuration
FIREBASE_PROJECT_ID=protime-summi
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./service-account-key.json
FIREBASE_FUNCTIONS_URL=https://europe-west3-protime-summi.cloudfunctions.net

# ChatGPT OAuth (Get from OpenAI Developer Platform)
CHATGPT_CLIENT_ID=your_client_id_here
CHATGPT_CLIENT_SECRET=your_client_secret_here
CHATGPT_REDIRECT_URI=https://your-server.run.app/auth/callback

# OAuth Configuration
OAUTH_CALLBACK_URL=https://your-server.run.app/auth/callback

# Security Secrets (Generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Optional: Redis for Rate Limiting (Cloud Memorystore)
# REDIS_HOST=10.0.0.3
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# Optional: Logging Level
LOG_LEVEL=info

# Stdio Mode (Claude Desktop / Claude Code)
# Used when running with --stdio flag
# STDIO_USER_ID=your-firebase-user-id
# STDIO_USER_EMAIL=your@email.com
# STDIO_USER_TIER=pro
